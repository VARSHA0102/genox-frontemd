{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    
 
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["vite"]
  },
  "include": ["src","src/vite-env.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}